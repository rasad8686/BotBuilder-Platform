# ========================================
# BOTBUILDER SAAS PLATFORM - ENVIRONMENT
# ========================================

# Environment
NODE_ENV=development

# Server Configuration
PORT=5000
FRONTEND_URL=http://localhost:5174

# Database Configuration
# For local development: postgresql://username:password@localhost:5432/botbuilder
# For production (Render, Railway, etc.): Get from your database provider
DATABASE_URL=postgresql://username:password@localhost:5432/botbuilder

# JWT Authentication
# Generate a secure random string for production
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# ========================================
# STRIPE PAYMENT INTEGRATION
# ========================================
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
# Get webhook secret after setting up webhook endpoint in Stripe dashboard
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs - REQUIRED for billing to work
# 1. Go to: https://dashboard.stripe.com/test/products
# 2. Create product "Pro Plan" with monthly price → Copy the Price ID (starts with price_)
# 3. Create product "Enterprise Plan" with monthly price → Copy the Price ID
# 4. Replace the IDs below with your actual Stripe Price IDs
# IMPORTANT: These MUST be set in production (Vercel/Railway environment variables)
STRIPE_PRO_PRICE_ID=price_your_pro_plan_price_id_here
STRIPE_ENTERPRISE_PRICE_ID=price_your_enterprise_plan_price_id_here

# ========================================
# RESEND EMAIL SERVICE (Recommended)
# ========================================
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_FROM=onboarding@resend.dev

# ========================================
# EMAIL NOTIFICATIONS (NodeMailer - Alternative)
# ========================================
# Gmail Example:
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# For Gmail, use an App Password: https://myaccount.google.com/apppasswords
# EMAIL_PASSWORD=your-app-password-here

# SendGrid Example (alternative):
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USER=apikey
# EMAIL_PASSWORD=your-sendgrid-api-key

# Mailgun Example (alternative):
# EMAIL_HOST=smtp.mailgun.org
# EMAIL_PORT=587
# EMAIL_USER=postmaster@your-domain.mailgun.org
# EMAIL_PASSWORD=your-mailgun-password

# ========================================
# AI INTEGRATION (OpenAI & Claude)
# ========================================
# Platform API Keys (Optional - for shared platform-wide AI access)
# Users can also provide their own API keys (BYO key model)
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# AI Encryption Secret (for encrypting user API keys in database)
# If not provided, will fall back to JWT_SECRET
# Generate a secure random string for production
AI_ENCRYPTION_SECRET=your-ai-encryption-secret-key-here

# Google Gemini API Key (for voice transcription)
GEMINI_API_KEY=AIza...

# Gladia API Key (for real-time speech-to-text)
GLADIA_API_KEY=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# ========================================
# REDIS CACHING (Optional but recommended)
# ========================================
# Local Redis: redis://localhost:6379
# Redis Cloud: redis://username:password@host:port
# Upstash: rediss://username:password@host:port (note: rediss for TLS)
REDIS_URL=redis://localhost:6379

# Alternative: Individual Redis settings (if not using URL)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password
# REDIS_DB=0

# ========================================
# OAUTH AUTHENTICATION
# ========================================
# Google OAuth
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Microsoft OAuth
# Get from: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_CALLBACK_URL=http://localhost:5000/api/auth/microsoft/callback

# ========================================
# OPTIONAL: EXTERNAL INTEGRATIONS
# ========================================
# Add your bot platform API keys here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
WHATSAPP_API_KEY=your_whatsapp_api_key_here
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# ========================================
# TWILIO SMS INTEGRATION
# ========================================
# Get credentials from: https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+15551234567

# ========================================
# EMAIL MARKETING PROVIDERS
# ========================================
# Choose your primary email provider: sendgrid, ses, smtp, resend
EMAIL_PROVIDER=sendgrid
# Optional fallback provider
EMAIL_FALLBACK_PROVIDER=

# Default sender configuration
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Your Company

# SendGrid Configuration
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Your Company

# AWS SES Configuration
# Get credentials from: https://console.aws.amazon.com/iam
AWS_SES_ACCESS_KEY=AKIAXXXXXXXXXXXXXXXXXX
AWS_SES_SECRET_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AWS_SES_REGION=us-east-1
SES_FROM_EMAIL=noreply@yourdomain.com
SES_FROM_NAME=Your Company
# Optional: Configuration set for tracking
SES_CONFIGURATION_SET=

# SMTP Configuration (Generic)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_SECURE=false
