{
  "id": "system-transactional-1",
  "name": "Order Confirmation",
  "category": "transactional",
  "description": "Clean order confirmation email for e-commerce",
  "subject": "Order Confirmed - #{{order_number}}",
  "previewText": "Thank you for your order! Here are your order details.",
  "isSystem": true,
  "featured": false,
  "responsive": true,
  "blocks": [
    {
      "id": "header-1",
      "type": "header",
      "settings": {
        "logo": "{{logo_url}}",
        "logoWidth": "120px",
        "logoAlign": "center",
        "backgroundColor": "#FFFFFF",
        "padding": { "top": 25, "right": 20, "bottom": 25, "left": 20 }
      }
    },
    {
      "id": "text-1",
      "type": "text",
      "content": "<div style='text-align: center;'><span style='font-size: 48px;'>&#10003;</span></div>",
      "settings": {
        "fontFamily": "Arial, sans-serif",
        "fontSize": "48px",
        "color": "#10B981",
        "lineHeight": "1",
        "textAlign": "center",
        "padding": { "top": 30, "right": 20, "bottom": 10, "left": 20 },
        "backgroundColor": "transparent"
      }
    },
    {
      "id": "text-2",
      "type": "text",
      "content": "<h1 style='text-align: center; margin: 0;'>Order Confirmed!</h1>",
      "settings": {
        "fontFamily": "Arial, sans-serif",
        "fontSize": "28px",
        "color": "#1F2937",
        "lineHeight": "1.3",
        "textAlign": "center",
        "padding": { "top": 10, "right": 20, "bottom": 5, "left": 20 },
        "backgroundColor": "transparent"
      }
    },
    {
      "id": "text-3",
      "type": "text",
      "content": "<p style='text-align: center; margin: 0;'>Thank you for your purchase, {{customer_name}}.</p><p style='text-align: center; margin: 10px 0 0 0; color: #6B7280;'>Order #{{order_number}}</p>",
      "settings": {
        "fontFamily": "Arial, sans-serif",
        "fontSize": "16px",
        "color": "#374151",
        "lineHeight": "1.5",
        "textAlign": "center",
        "padding": { "top": 5, "right": 20, "bottom": 30, "left": 20 },
        "backgroundColor": "transparent"
      }
    },
    {
      "id": "text-4",
      "type": "text",
      "content": "<h3 style='margin: 0 0 15px 0; border-bottom: 2px solid #E5E7EB; padding-bottom: 10px;'>Order Summary</h3><table width='100%' cellpadding='10' style='border-collapse: collapse;'><tr style='border-bottom: 1px solid #E5E7EB;'><td style='padding: 15px 0;'><strong>{{item_1_name}}</strong><br><span style='color: #6B7280; font-size: 14px;'>Qty: {{item_1_qty}}</span></td><td style='text-align: right; padding: 15px 0;'>{{item_1_price}}</td></tr><tr style='border-bottom: 1px solid #E5E7EB;'><td style='padding: 15px 0;'><strong>{{item_2_name}}</strong><br><span style='color: #6B7280; font-size: 14px;'>Qty: {{item_2_qty}}</span></td><td style='text-align: right; padding: 15px 0;'>{{item_2_price}}</td></tr><tr><td style='padding: 15px 0;'><strong>Subtotal</strong></td><td style='text-align: right; padding: 15px 0;'>{{subtotal}}</td></tr><tr><td style='padding: 5px 0;'>Shipping</td><td style='text-align: right; padding: 5px 0;'>{{shipping}}</td></tr><tr><td style='padding: 5px 0;'>Tax</td><td style='text-align: right; padding: 5px 0;'>{{tax}}</td></tr><tr style='border-top: 2px solid #1F2937;'><td style='padding: 15px 0;'><strong style='font-size: 18px;'>Total</strong></td><td style='text-align: right; padding: 15px 0;'><strong style='font-size: 18px;'>{{total}}</strong></td></tr></table>",
      "settings": {
        "fontFamily": "Arial, sans-serif",
        "fontSize": "16px",
        "color": "#374151",
        "lineHeight": "1.5",
        "textAlign": "left",
        "padding": { "top": 20, "right": 25, "bottom": 20, "left": 25 },
        "backgroundColor": "#F9FAFB"
      }
    },
    {
      "id": "spacer-1",
      "type": "spacer",
      "settings": {
        "height": "20px"
      }
    },
    {
      "id": "text-5",
      "type": "text",
      "content": "<h3 style='margin: 0 0 15px 0;'>Shipping Address</h3><p style='margin: 0; line-height: 1.6;'>{{shipping_name}}<br>{{shipping_address}}<br>{{shipping_city}}, {{shipping_state}} {{shipping_zip}}<br>{{shipping_country}}</p>",
      "settings": {
        "fontFamily": "Arial, sans-serif",
        "fontSize": "14px",
        "color": "#374151",
        "lineHeight": "1.6",
        "textAlign": "left",
        "padding": { "top": 20, "right": 25, "bottom": 20, "left": 25 },
        "backgroundColor": "transparent"
      }
    },
    {
      "id": "button-1",
      "type": "button",
      "settings": {
        "text": "Track Your Order",
        "url": "{{tracking_url}}",
        "backgroundColor": "#7C3AED",
        "textColor": "#FFFFFF",
        "fontSize": "16px",
        "fontWeight": "bold",
        "padding": { "top": 20, "right": 20, "bottom": 30, "left": 20 },
        "borderRadius": "8px",
        "align": "center",
        "fullWidth": false
      }
    },
    {
      "id": "divider-1",
      "type": "divider",
      "settings": {
        "style": "solid",
        "color": "#E5E7EB",
        "thickness": "1px",
        "width": "100%",
        "padding": { "top": 10, "right": 0, "bottom": 10, "left": 0 }
      }
    },
    {
      "id": "text-6",
      "type": "text",
      "content": "<p style='text-align: center; margin: 0;'>Questions about your order? <a href='{{support_url}}' style='color: #7C3AED;'>Contact Support</a></p>",
      "settings": {
        "fontFamily": "Arial, sans-serif",
        "fontSize": "14px",
        "color": "#6B7280",
        "lineHeight": "1.5",
        "textAlign": "center",
        "padding": { "top": 20, "right": 20, "bottom": 20, "left": 20 },
        "backgroundColor": "transparent"
      }
    },
    {
      "id": "footer-1",
      "type": "footer",
      "settings": {
        "companyName": "{{company_name}}",
        "address": "{{company_address}}",
        "showUnsubscribe": false,
        "unsubscribeText": "Unsubscribe",
        "showViewInBrowser": true,
        "backgroundColor": "#F3F4F6",
        "textColor": "#6B7280",
        "fontSize": "12px",
        "padding": { "top": 25, "right": 20, "bottom": 25, "left": 20 }
      }
    }
  ]
}
