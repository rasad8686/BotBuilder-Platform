{
  "id": "system-welcome-1",
  "name": "Welcome Email",
  "category": "welcome",
  "description": "Welcome new subscribers with a friendly introduction",
  "subject": "Welcome to {{company_name}}!",
  "previewText": "Thanks for joining us - here's what you need to know",
  "isSystem": true,
  "featured": true,
  "responsive": true,
  "blocks": [
    {
      "id": "header-1",
      "type": "header",
      "settings": {
        "logo": "{{logo_url}}",
        "logoWidth": "150px",
        "logoAlign": "center",
        "backgroundColor": "#FFFFFF",
        "padding": { "top": 30, "right": 20, "bottom": 20, "left": 20 }
      }
    },
    {
      "id": "text-1",
      "type": "text",
      "content": "<h1 style='text-align: center; color: #1F2937; margin: 0;'>Welcome, {{first_name}}!</h1>",
      "settings": {
        "fontFamily": "Arial, sans-serif",
        "fontSize": "28px",
        "color": "#1F2937",
        "lineHeight": "1.3",
        "textAlign": "center",
        "padding": { "top": 30, "right": 20, "bottom": 10, "left": 20 },
        "backgroundColor": "transparent"
      }
    },
    {
      "id": "text-2",
      "type": "text",
      "content": "<p style='text-align: center; margin: 0;'>We're excited to have you on board. You've just joined thousands of others who trust us to help them succeed.</p>",
      "settings": {
        "fontFamily": "Arial, sans-serif",
        "fontSize": "16px",
        "color": "#6B7280",
        "lineHeight": "1.6",
        "textAlign": "center",
        "padding": { "top": 10, "right": 40, "bottom": 30, "left": 40 },
        "backgroundColor": "transparent"
      }
    },
    {
      "id": "button-1",
      "type": "button",
      "settings": {
        "text": "Get Started",
        "url": "{{app_url}}",
        "backgroundColor": "#7C3AED",
        "textColor": "#FFFFFF",
        "fontSize": "16px",
        "fontWeight": "bold",
        "padding": { "top": 0, "right": 20, "bottom": 30, "left": 20 },
        "borderRadius": "8px",
        "align": "center",
        "fullWidth": false
      }
    },
    {
      "id": "divider-1",
      "type": "divider",
      "settings": {
        "style": "solid",
        "color": "#E5E7EB",
        "thickness": "1px",
        "width": "80%",
        "padding": { "top": 20, "right": 0, "bottom": 20, "left": 0 }
      }
    },
    {
      "id": "text-3",
      "type": "text",
      "content": "<h3 style='text-align: center; color: #1F2937; margin: 0 0 15px 0;'>What's next?</h3><p style='margin: 0;'>Here are a few things you can do to get started:</p><ul style='padding-left: 20px; margin: 15px 0;'><li>Complete your profile setup</li><li>Explore our features</li><li>Connect with our community</li></ul>",
      "settings": {
        "fontFamily": "Arial, sans-serif",
        "fontSize": "16px",
        "color": "#374151",
        "lineHeight": "1.6",
        "textAlign": "left",
        "padding": { "top": 20, "right": 40, "bottom": 20, "left": 40 },
        "backgroundColor": "#F9FAFB"
      }
    },
    {
      "id": "spacer-1",
      "type": "spacer",
      "settings": {
        "height": "30px"
      }
    },
    {
      "id": "text-4",
      "type": "text",
      "content": "<p style='text-align: center; margin: 0;'>Need help? Our support team is here for you.</p>",
      "settings": {
        "fontFamily": "Arial, sans-serif",
        "fontSize": "14px",
        "color": "#6B7280",
        "lineHeight": "1.5",
        "textAlign": "center",
        "padding": { "top": 10, "right": 20, "bottom": 10, "left": 20 },
        "backgroundColor": "transparent"
      }
    },
    {
      "id": "social-1",
      "type": "social",
      "settings": {
        "platforms": [
          { "name": "facebook", "url": "{{facebook_url}}", "enabled": true },
          { "name": "twitter", "url": "{{twitter_url}}", "enabled": true },
          { "name": "instagram", "url": "{{instagram_url}}", "enabled": true },
          { "name": "linkedin", "url": "{{linkedin_url}}", "enabled": false },
          { "name": "youtube", "url": "", "enabled": false }
        ],
        "iconStyle": "colored",
        "iconSize": "32px",
        "align": "center",
        "spacing": "10px",
        "padding": { "top": 20, "right": 0, "bottom": 20, "left": 0 }
      }
    },
    {
      "id": "footer-1",
      "type": "footer",
      "settings": {
        "companyName": "{{company_name}}",
        "address": "{{company_address}}",
        "showUnsubscribe": true,
        "unsubscribeText": "Unsubscribe",
        "showViewInBrowser": true,
        "backgroundColor": "#F3F4F6",
        "textColor": "#6B7280",
        "fontSize": "12px",
        "padding": { "top": 30, "right": 20, "bottom": 30, "left": 20 }
      }
    }
  ]
}
